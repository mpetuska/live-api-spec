{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": "./build",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/__mocks__",
    "**/__tests__"
  ]
}
