{
  "name": "mock-server",
  "version": "1.0.0",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "clean": "rimraf build coverage",
    "start": "nodemon src/index.ts",
    "start:full": "yarn workspace mock-console clean && env-cmd yarn workspace mock-console build && nodemon src/index.ts",
    "build": "yarn validate && tsc && cpy 'raml/**/*' '../build' --cwd=src --parents",
    "build:start": "yarn build && yarn start:production",
    "start:production": "node build/index.js",
    "design": "api-designer",
    "validate": "ts-node scripts/ramlValidate.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "osprey-mock-service": "^0.4.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.4",
    "@types/node": "^13.11.0",
    "api-designer": "^0.4.1",
    "cpy-cli": "^3.1.0",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.2",
    "raml-cli": "^1.0.0",
    "replace": "^1.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
